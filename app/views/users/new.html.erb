<div id="title" class="blackPaper">
  	<h1>ユーザー登録</h1>
</div>
<div id="main" class="paper">
  
  <%= error_messages_for :user %>
  <% form_for :user, :url => users_path do |f| -%>
  <p><label for="login">*ユーザー名</label><br/>
  <%= f.text_field :login %></p>

  <p><label for="login">*URLで使う名前</label><br/>
  <%= f.text_field :url_name %></p>

  <p><label for="email">*Eメール</label><br/>
  <%= f.text_field :email %></p>

  <p><label for="password">*パスワード</label><br/>
  <%= f.password_field :password %></p>

  <p><label for="password_confirmation">*パスワード（確認）</label><br/>
  <%= f.password_field :password_confirmation %></p>
  
  <p><label for="flickr_id">FlickrのユーザーID「例:99999999@00」(オプション)</label><br />
  <%= f.text_field :flickr_id %></p>

  <p style="margin-top: 16px;"><%= submit_tag '登録' %></p>
  <% end -%>
</div>

